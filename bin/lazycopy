#!/usr/bin/env python

import sys

from lazycopy import Copy

def main():
    if len(sys.argv[1:]) < 2:
        print "Usage: %s source_dir [source_dir ...] destination_dir" % sys.argv[0]
        sys.exit(1)

    sources = sys.argv[1:-1]
    dest = sys.argv[-1]
    print "%s -> %s" % (sources, dest)
    Copy(dest).sources = sources

if __name__ == "__main__":
    main()
